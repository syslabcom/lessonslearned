<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
    lang="en"
    metal:use-macro="context/main_template/macros/master"
    i18n:domain="ploneconf.site">

<body>
    <metal:content-core fill-slot="content-core">
        <h2>Create a new entry</h2>
        <br/>
        <form method="post">
            <fieldset>
                <label>Title<input name="title" type="text"/></label>
                <br/>
                <label>Text<textarea name="text"></textarea></label>
            </fieldset>
            <fieldset>
            <legend>Customer</legend>
                <select name="customer">
                    <span tal:repeat="customer view/customers"><option tal:attributes="value customer" tal:content="customer">A Customer</option></span>
                </select>
            </fieldset>
            <br/>
            <fieldset>
                <legend>Keywords</legend>
                <div tal:repeat="keyword view/keywords">
                    <input type="checkbox" name="keywords" tal:attributes="value keyword" tal:content="keyword">A keyword</input>
                    <br/>
                </div>
            </fieldset>
            <br/>
            <input type="submit" value="Create Item"/>
        </form>
        <br/>
        <div tal:condition="view/is_post">
            <h2>Your entry:</h2>
            <br/>
                <h4 tal:content="request/title"/>
                <p>Keywords: <tal:block content="python: view.keywords_as_string(request.form)"/></p>
                <p>Customer: <tal:block content="request/customer"/></p>
                <p tal:content="request/form/text"/>
                <br/>
        </div>
    </metal:content-core>
</body>
</html>
